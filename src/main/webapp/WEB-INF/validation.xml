<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
    <formset>
        <form name="calculateForm">
            <field property="firstNumber" depends="required">
                <arg key="error.firstNumber"/>
            </field>
            <field property="secondNumber" depends="required">
                <arg key="error.secondNumber"/>
            </field>
            <field property="typeAction" depends="required">
                <arg key="error.typeAction"/>
            </field>
        </form>
    </formset>
</form-validation>